import math
import numpy as np
def grad(x):
    return 6*x+2+4*np.cos(x)
def cost(x):
    return 3*x**2+2*x+4*np.sin(x)
def MyGrad(eta,x0):
    x=[x0]
    for it in range(100):
        x_new = x[-1] - eta*grad(x[-1])
        if abs(grad(x_new)) < 1e-3:
            break
        x.append(x_new)
    return (it,x)
(it,x)=MyGrad(0.01,-1)
print(x[-1],cost(x[-1]),it)